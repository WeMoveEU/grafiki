<html>
  <head>
    <title>Grafiki Admin</title>
    <meta name="decorator" content="atl.admin">
    $webResourceManager.requireResource("eu.wemove.confluence.grafiki:admin-resources")
  </head>
  <body>
    <form id="admin" class="aui">
      <div class="field-group">
        <label for="base_url">Metabase base URL</label>
        <input type="text" id="base_url" name="base_url" class="text">
      </div>
      <div class="field-group">
        <label for="secret_key">Metabase secret key</label>
        <input type="text" id="secret_key" name="secret_key" class="text">
      </div>
      <div class="field-group">
        <input type="submit" value="Save" class="button">
      </div>
    </form>
  </body>
</html>
